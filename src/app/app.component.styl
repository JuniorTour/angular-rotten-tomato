.txt-cut
  text-overflow ellipsis
  overflow hidden
  white-space nowrap
.btn
  display: inline-block
  background-color #fff
  font-weight: 400
  text-align: center
  white-space: nowrap
  vertical-align: middle
  user-select: none
  border: 1px solid #eee
  padding: .5rem .75rem
  font-size: 1rem
  line-height: 1.25
  border-radius: .25rem
  transition: all .15s ease-in-out
  &:hover
    background-color #ccc
  &:active
    background-color #aaa
.btn-primary
  color: #fff
  background-color: #007bff
  &:hover
    background-color: #0069d9;
    border-color: #0062cc;

.btn-success
  color: #fff
  background-color: #28a745
  &:hover
    background-color: #218838

.btn-attitude
  //padding-left 35px
  //background url("../assets/img/icons.png") -281px -44px/32px 32px no-repeat

.btn-fresh
  color: #fff
  background-color: #E91B23
  &:hover
    background-color: #B1151B
.btn-rotten
  color: #fff
  background-color: #6F893E
  &:hover
    background-color: #218838
    border-color: #1e7e34;


header
  height: 50px
  line-height:50px
  background-color: #3A9425
.brand
  text-indent: -999px
  background: url("../assets/img/logo.png")  10px 50%/100px 35px no-repeat

.body
  padding 0 2.5%
  margin 20px 0

.input-wrapper
  text-align center
  p
    display: flex;
    margin 10px 0
  label
    padding: .5rem .75rem;
    margin-bottom: 0;
    font-size: 1rem;
    font-weight: 400;
    line-height: 1.25;
    color: #495057;
    text-align: center;
    background-color: #e9ecef;
    border: 1px solid rgba(0,0,0,.15);
    border-radius: .25rem;
    border-right: 0;
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
  input
    flex 1
    padding-left 10px
    border: 1px solid #ddd
    border-radius 0 .25rem .25rem 0
    &:focus
      color: #495057;
      background-color: #fff;
      border-color: #80bdff;


.item-list
  width:100%;
  margin 20px 0
  .item
    display: flex;
    margin-bottom: 30px;

.right-panel
  flex 3
  display: flex;
  flex-direction column
  align-items center
  .fresh-rate
    width: 100%;
    font-size: 48px;
    color: #dc3545;
    text-align: center;

.poster-wrapper
  flex 1.2
  margin-right 15px
  position: relative;
  .poster-title
    box-sizing border-box
    width:100%;
    color: #fff;
    text-align: center;
    background-color rgba(35,35,35,.6)
    padding 0 5px
    position: absolute;
    left 0
    bottom 0
  .poster-img
    width: 100%
    height: 120px
    background-color: #eee
    vertical-align top
